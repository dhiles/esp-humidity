menu "ESP32 Shared Configuration"
    config ENABLE_MQTT
        bool "Enable MQTT"
        default y
        help
            Enable MQTT functionality

    config ENABLE_WIFI
        bool "Enable WiFi"
        default y
        help
            Enable WiFi connectivity

    config ENABLE_CAM
        bool "Enable Camera"
        default n
        depends on ESP32_CAMERA_COMPATIBLE  # Optional: Add dependency if needed for hardware checks
        help
            Enable camera functionality

    config ENABLE_SLEEPLOOP
        bool "Enable Sleep Loop"
        default n
        help
            Enable Sleep Loop

    config ENABLE_BLE_PROVISIONING
        bool "Enable BLE Provisioning"
        default y
        help
            Enable BLE Provisioning
endmenu